<div id="ampView">
    <main>
        <h3>Amplitude Envelope Generator</h3>
        <p>where the oscillator sets sail</p>
        <div id="eduAmpEG">
            <div>
                <label for="aAttack">A</label>
                <input type="range" id="aAttack" min="0" max="1" step="0.01" value=".4"> 
            </div>
            <div>
                <label for="aDecay">D</label>
                <input type="range" id="aDecay" min="0" max="1" step="0.01" value=".8"> 
            </div>
            <div>
                <label for="aAttack">S</label>
                <input type="range" id="aSustain" min="0" max="1" step="0.01" value=".6"> 
            </div>
            <div>
                <label for="aRelease">R</label>
                <input type="range" id="aRelease" min="0" max="1" step="0.01" value=".1"> 
            </div>
        </div>
        <div id="ampDetail"></div>
    </main>
    <aside>
        <div id="ampChart">
            <canvas id="ampADSR"></canvas>
        </div>
        <div class="spacebarEvent">
            <p>press spacebar to play oscillator</p>
        </div>
    </aside>
    <div class="continueSection">
        <span id="pickAmp">continue with selected parameters</span>
    </div>
</div>
<span class="closeChip">&times;</span>